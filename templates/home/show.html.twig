{% extends 'base.html.twig' %}

{% block title %}details
{% endblock %}
{% block body %}
	<div class=" flex justify-center space-x-3 mt-5 pt-3">
		<div class="relative overflow-hidden drop-shadow-md group">
			<img src="{{property.image}}" class="w-90 mb-3 rounded-sm  group-hover:scale-105  duration-300 group-hover:blur-md group-hover:opacity-75">
			<div class="absolute w-full h-full bg-dark top-0 left-0 opacity-0 group-hover:opacity-100 flex items-center justify-center ">
				<a class="text-2xl font-bold  bg-sky-500 opacity-50 p-5 cursor-pointer flex items-center justify-center rounded-lg">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
					</svg>
					<span class="ml-3">Contacter l'agence</span>
				</a>
			</div>
		</div>
		<div class="bg-gray-100 p-7 flex flex-col">
			<span class="text-lg font-bold text-sky-950 text-center py-2">{{property.title}}</span>
			<div>
				<ul>
					<li>
						<span class="text-sm text-gray-800">
							description:</span>
						<span class="text-xs text-gray-500">lEsse cupidatat amet velit anim occaecat eiusmod<br>.Ut cupidatat velit fugiat cillum enim minim.<br>Ipsum elit elit aliquip veniam est cupidatat sit labore.
						</span>
					</li>
					<li class="py-3 text-center bg-gray-200">
						<span class="text-sm text-gray-800 ">prix:</span>
						<span class="text-red-500 font-bold">{{property.price}}
							$</span>
					</li>
					<li class="py-3 text-center bg-gray-300">
						<span class="text-sm text-gray-800 ">surfaces:</span>
						<span class="text-sky-500 font-bold">{{property.surface}}
							m</span>
					</li>
					<li class="py-3 text-center bg-gray-200">
						<span class="text-sm text-gray-800 ">
							{% if property.floor < 2 %}
								etage :
							{% else %}
								etages :
							{% endif %}
						</span>
						<span class="text-sky-500 font-bold">{{property.floor}}
						</span>
					</li>
					<li class="py-3 text-center bg-gray-300">
						<span class="text-sm text-gray-800 ">
							{% if property.rooms < 2 %}
								chambre :
							{% else %}
								chambres:
							{% endif %}
						</span>
						<span class="text-sky-500 font-bold">{{property.rooms}}
						</span>
					</li>
					<li class="py-3 text-center bg-gray-200">
						<span class="text-sm text-gray-800 ">
							{% if property.floor < 2 %}
								etage :
							{% else %}
								etages :
							{% endif %}
						</span>
						<span class="text-sky-500 font-bold">{{property.floor}}
						</span>
					</li>
					<li class="py-3 text-center bg-gray-300">
						<span class="text-sm text-gray-800 ">
							chaufage:
						</span>
						<span class="text-sky-500 font-bold">{{property.heatype}}
						</span>
					</li>

				</ul>
				<div class="table-fixed"></div>
			</div>

		</div>
	</div>
</div>{% endblock %}
